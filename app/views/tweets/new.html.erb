<% if @tweet.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
<% @tweet.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>

<%= form_for @tweet, massage: {action: :create} do |f| %>

<%= f.label :massage, 'いまなにしてる？' %>
<%= f.text_field :massage %>
<%= f.submit '投稿' %>

<% end %>